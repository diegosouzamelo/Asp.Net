<!DOCTYPE html>
<html>
<head>
    <title>Notícias - Diego Souza</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/style.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/javascript")
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 900);
            });
        });
    </script>


</head>
<body>
    <!-- header-section-starts -->
    <div class="h-top" id="home">
        <div class="top-header">
            <ul class="cl-effect-16 top-nag">
                <li><a href="/" data-hover="Início">Início</a></li>
                <li><a href="~/News/Index" data-hover="Notícias">Notícias</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="~/News/Index" data-hover="Conectado">Conectado</a></li>
                }
                else
                {
                    <li><a href="~/Account/Login" data-hover="Aréa Exclusiva">Aréa Exclusiva</a></li>
                }</ul>
            <div class="text-center">

            <div class="search-box">
                <div class="b-search">
                    @using (Ajax.BeginForm("Index", "News", new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "divListNews" }))
                    {
                <form>
                    <input id="Pesquisa" name="Pesquisa" type="text" value="Buscar Notícias" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
                    <input type="submit" value="">
                </form>
                    }
                </div>
            </div>
        
            <div class="clearfix"></div>
                @Html.Partial("_LoginPartial")
        </div>
    </div>
    @RenderBody()
    <hr />
    <div class="footer">
        <div class="footer-top">
            <div class="col-md-4 footer-grid">
                <h4>Notícias em Primeira mão </h4>
                <ul class="bottom">
                    <li>Fique por Dentro</li>
                    <li>Portal de Notícia mais Inovado</li>
                </ul>
            </div>
            <div class="col-md-4 footer-grid">
                <h4>Sociais</h4>
                <ul class="bottom">
                    <li><i class="glyphicon glyphicon-home"></i> Senac</li>
                    <li><i class="glyphicon glyphicon-envelope"></i><a href="mailto:diego@hotmail.com">diego@gmail.com</a></li>
                </ul>
            </div>
            <div class="col-md-4 footer-grid">
                <h4>Endereços</h4>
                <ul class="bottom">
                    <li><i class="glyphicon glyphicon-map-marker"></i>R. Dante Batiston, 248 </li>
                    <li><i class="glyphicon glyphicon-earphone"></i>(11) 9999-9999</li>
                </ul>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="copy">
        <p>&copy; 2018 DiegoSouza. All Rights Reserved | Design by <a href="#">Diego</a> </p>
    </div>
    <div class="clearfix"> </div>
    
    <!--//footer-->
    <!--start-smooth-scrolling-->
    <script type="text/javascript">
        $(document).ready(function () {
            /*
            var defaults = {
                    containerID: 'toTop', // fading element id
                containerHoverID: 'toTopHover', // fading element hover id
                scrollSpeed: 1200,
                easingType: 'linear'
                };
            */

            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <a href="#home" id="toTop" class="scroll" style="display: block;"> <span id="toTopHover" style="opacity: 1;"> </span></a>
  
    @RenderSection("scripts", required: false)
</body>
</html>
